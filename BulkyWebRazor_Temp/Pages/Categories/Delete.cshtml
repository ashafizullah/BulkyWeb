@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Category.Name"></label>
            <input class="form-control" disabled asp-for="Category.Name" />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Category.DisplayOrder"></label>
            <input class="form-control" disabled asp-for="Category.DisplayOrder" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/category/index" class="btn btn-outline-secondary border form-control">Back to list</a>
            </div>
        </div>
    </div>
</form>